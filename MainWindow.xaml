<Window x:Class="CustomerManager_WPF_SQL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerManager_WPF_SQL"
        xmlns:viewModel="clr-namespace:CustomerManager_WPF_SQL.Models.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="CustomerManager System"/>

        
        <StackPanel Grid.Row="1">
            <RadioButton Padding="15" BorderThickness="0" VerticalAlignment="Center" Content="Lägg till kund" Command="{Binding CreateCustomerViewCommand}"/>
            <RadioButton Padding="15" BorderThickness="0" VerticalAlignment="Center" Content="Lägg till ett ärende" Command="{Binding CreateErrandViewCommand}"/>
            <RadioButton Padding="15" BorderThickness="0" VerticalAlignment="Center" Content="Lista upp alla kunder" Command="{Binding ListCustomerCommand}"/>
            <RadioButton Padding="15" BorderThickness="0" VerticalAlignment="Center" Content="Lista upp alla ärenden" Command="{Binding ListErrandViewCommand}"/>
        </StackPanel>


        <ContentControl Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4" Content="{Binding CurrentView}"/>
    </Grid>
</Window>
